<WeatherScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: "20sp"
        MDTopAppBar:
            title: "LCloud"
            right_action_items: [["dots-vertical", lambda x: app.callback()]]
        MDBoxLayout:
            spacing: "10sp"
            size_hint: 0.9, None
            pos_hint: {'center_x': 0.5}
            MDTextField:
                hint_text: "Введіть місто"
                mode: "fill"
            MDIconButton:
                icon: "search-web"
                icon_size: "32sp"
                md_bg_color: app.theme_cls.primary_color
        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': 0.5}
            size_hint: 0.9, 0.4
            MDLabel:
                text: "14°C"
                font_style: 'H1'
                halign: 'center'
            MDLabel:
                text: "Ясно "
                font_style: 'H4'
                halign: 'center'
    
            